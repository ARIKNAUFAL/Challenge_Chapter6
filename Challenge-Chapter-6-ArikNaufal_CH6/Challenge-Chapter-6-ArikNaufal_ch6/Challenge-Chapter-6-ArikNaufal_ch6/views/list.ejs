<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <title><%= title %></title>
</head>
<style>
  .dropdown-menu{
    width: 25em !important;
  }
  .navbar-brand img{
    width: 100px;
  }
</style>
<body>
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><img src="./images/logo.png" alt=""></a>
      <ul class=" d-flex justify-content-evenly" style="margin-bottom: 0px;
      padding-top: 10px">
        <li class="nav-item">
          <a class="nav-link active text-white" aria-current="page" href="/list">Player</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/guild">Guild</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/server">Server</a>
        </li>
      <form class="d-flex">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-warning" type="submit">Search</button>
      </form>
    </div>
  </nav>

    <% let id = 1  %> 
    <div class="container" style="margin-top: 20em;">
      <h2 class="text-center" style="margin-bottom: 50px;">Player List</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">no</th>
            <th scope="col">name</th>
            <th scope="col">email</th>
            <th scope="col">option</th>
          </tr>
        </thead>
        <tbody>
          <% list.forEach(e => { %>
          <tr>
            <th scope="row"><%= id++ %> </th>
            <td><%= e.name %></td>
            <td><%= e.email %></td>
            <td>
              <a class="text-decoration-none" href="/list/<%= e.name %>">detail |</a>
              <span>|<a href="/list/delete/<%= e.id %>" title="Image from freepnglogos.com"><img src="https://www.freepnglogos.com/uploads/trash-can-png/trash-can-png-transparent-images-png-only-1.png" width="25" alt="trash can png transparent images png only" /></a></span>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>

      <a href="/list"></a>                    <!-- apa ini -->

      <!-- add form -->
      <form method="post" action="/list">
        <div class="mb-3">
          <label for="name" class="form-label"></label>
          <input type="text" class="bl form-control" id="name" name="name" placeholder="name" required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label ms-2"></label>
          <input placeholder="email" class="form-control" id="email" name="email" type="text"></input>
        </div>
        <div class="mb-3">
          <a class="btn-input text-white text-decoration-none" href="/list">
            <button type="submit" class="btn btn-primary login form-control">submit</button>
          </a>
        </div>
      </form>
    </div>
    <script src="./list.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>