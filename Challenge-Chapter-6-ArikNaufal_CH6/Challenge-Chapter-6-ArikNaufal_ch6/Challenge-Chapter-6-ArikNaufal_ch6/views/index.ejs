<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <title><%= title  %> </title>
</head>
<style>
  img{
    width: 100px;
  }
</style>
<body>
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><img src="./images/logo.png" alt=""></a>
      <ul class=" d-flex justify-content-evenly" style="margin-bottom: 0px;
      padding-top: 10px">
        <li class="nav-item">
          <a class="nav-link active text-white" aria-current="page" href="/list">Player</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/guild">Guild</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/server">Server</a>
        </li>
      <form class="d-flex">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-warning" type="submit">Search</button>
      </form>
    </div>
  </nav>

  <div class="container" style="padding-top:10px">
    <h2>ADMIN HOMEPAGE</h2>
  </div>

  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content" style="width: 700px !important;">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">welcome to admin page</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>table schema:</p>
          <img style="width: 650px;" src="./images/schema.png" alt="">
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script>
    // show modal without trigger
    $(window).on('load', function(){
        $('#exampleModal').modal('show');
    });
  </script>
</body>
</html>

