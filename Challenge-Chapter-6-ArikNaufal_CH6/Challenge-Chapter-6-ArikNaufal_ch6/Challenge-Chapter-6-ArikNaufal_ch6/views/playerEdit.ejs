<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <title><%= title %></title>
</head>
<style>
  .dropdown-menu{
    width: 25em !important;
  }
  .span{
    margin: 0 1em;
  }
</style>
  <body>
    <div class="card" style="width: 25rem; margin: 5em; padding: 2em;">
      <h2 style="margin-bottom: 1rem;">Update data</h2>
      <a href="/list"></a>                    <!-- apa ini -->

      <!-- add form -->
      <form method="post" action="/list/update/<%= list.name %>">
        <div class="mb-3">
          <label for="name" class="form-label ms-2"></label>
          <input placeholder="name" class="form-control" id="name" name="name" type="text" value="<%= list.name %>"></input>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label ms-2"></label>
          <input placeholder="email" class="form-control" id="email" name="email" type="text" value="<%= list.email %>"></input>
        </div>
        <div class="mb-3">
          <div class="d-flex">
            <div class="mb-3">
              <label for="score_1" class="form-label ms-2"></label>
              <input placeholder="score_1" class="form-control" id="score_1" name="score_1" type="text" value="<%= list.score_1 %>"></input>
            </div>
            <div class="mb-3 span">
              <label for="score_2" class="form-label ms-2"></label>
              <input placeholder="score_2" class="form-control" id="score_2" name="score_2" type="text" value="<%= list.score_2 %>"></input>
            </div>
            <div class="mb-3">
              <label for="score_3" class="form-label ms-2"></label>
              <input placeholder="score_3" class="form-control" id="score_3" name="score_3" type="text" value="<%= list.score_3 %>"></input>
            </div>
          </div>

          <a class="btn-input text-white text-decoration-none" href="/list">
            <button type="submit" class="btn btn-primary login form-control">submit</button>
          </a>
        </div>
      </form>
    </div>   
    <script src="./list.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>